<%- include("partials/header", {active:"activities"}) -%>

<div class="container">
  <h1><%= name %></h1>
  <br />
  <% for(var i = 0; i < images.length; i++) { %> 
    <% if (i === 0 || i % 3 === 0) { %>
  <div class="row" style="margin: 15px">
    <% } %>
    <a
      href="/images/Gallery/<%= name %>/<%= images[i].name %>"
      data-toggle="lightbox"
      data-gallery="gallery"
      
      class="col-md-4"
    >
      <img
        src="/images/Gallery/<%= name %>/<%= images[i].name %>"
        class="rounded"
        width="100%"
        height="300px"
        style="object-fit:fill;"
        
        
      />
    </a>

    <% if (i === 2 || i % 3 === 2) { %>
  </div>
  <% }%> 
  <% } %>
  <br />
</div>

  <%- include("partials/footer") -%>

